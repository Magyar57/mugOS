{
    "version": "2.0.0",
	"tasks": [
        {
            "label": "Native build",
            "type": "shell",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
            "label": "Docker build",
            "type": "shell",
            "command": "docker",
            "args": ["compose", "-f", "Compose.yml", "up"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
