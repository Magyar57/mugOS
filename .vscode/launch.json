{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "cppdbg",
			"preLaunchTask": "Native build",
			"request": "launch",
			"program": "qemu-system-i386",
			"args": ["-fda", "${workspaceFolder}/build/floppy.img"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"linux": {
				"program": "/usr/bin/qemu-system-i386",
			},
			"osx": {
				"program": "/opt/homebrew/bin/qemu-system-i386",
			},
		},
		{
			"name": "Debug",
			"type": "cppdbg",
			"preLaunchTask": "Native build",
			"request": "launch",
			"program": "bochs-debugger",
			"args": ["-f", "${workspaceFolder}/Debuggers/Bochs.cfg"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"linux": {
				"program": "/usr/bin/bochs-debugger",
			},
			"osx": {
				"program": "/opt/homebrew/bin/bochs-debugger",
			},
		},
	]
}
