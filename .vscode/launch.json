{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "QEMU",
			"type": "cppdbg",
			"preLaunchTask": "Native build",
			"request": "launch",
			"program": "qemu-system-x86_64",
			"args": [
				"-drive", "if=pflash,file=/usr/share/edk2/x64/OVMF.4m.fd,format=raw,readonly=on", 
				"-drive", "if=ide,media=disk,file=${workspaceFolder}/build/floppy.img,format=raw"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"linux": {
				"program": "/usr/bin/qemu-system-x86_64",
			},
			"osx": {
				"program": "/opt/homebrew/bin/qemu-system-x86_64",
				"MIMode": "lldb",
			},
		},
		{
			"name": "Bochs",
			"type": "cppdbg",
			"preLaunchTask": "Native build",
			"request": "launch",
			"program": "bochs",
			"args": ["-f", "${workspaceFolder}/Environment/Bochs.cfg", "-q"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"linux": {
				"program": "/usr/bin/bochs",
			},
			"osx": {
				"program": "/opt/homebrew/bin/bochs",
				"MIMode": "lldb",
			},
		},
	]
}
